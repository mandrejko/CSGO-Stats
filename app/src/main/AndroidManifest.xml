<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.carthage.andrejko.matt.csgostats" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddMatch"
            android:label="@string/title_activity_add_match" >
        </activity>
        <activity
            android:name=".MatchDates"
            android:label="@string/title_activity_match_dates" >
        </activity>
        <activity
            android:name=".MatchStats"
            android:label="@string/title_activity_match_stats" >
        </activity>
    </application>

</manifest>
